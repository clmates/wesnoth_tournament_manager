{
  "name": "wesnoth-tournament-backend",
  "version": "1.0.0",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "description": "Backend for Wesnoth Tournament Management",
  "main": "dist/server.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/server.ts",
    "dev:migration": "NODE_ENV=migration tsx watch src/server.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node -e \"const fs = require('fs'); const path = require('path'); const copyDir = (src, dst) => { if (!fs.existsSync(dst)) fs.mkdirSync(dst, { recursive: true }); fs.readdirSync(src).forEach(file => { const srcPath = path.join(src, file); const dstPath = path.join(dst, file); const stat = fs.statSync(srcPath); if (stat.isDirectory()) copyDir(srcPath, dstPath); else fs.copyFileSync(srcPath, dstPath); }); }; fs.copyFileSync('src/config/schema.sql', 'dist/config/schema.sql'); copyDir('src/i18n/locales', 'dist/i18n/locales');\"",
    "start": "NODE_ENV=production node dist/server.js",
    "start:migration": "NODE_ENV=migration node dist/server.js",
    "migrate": "node scripts/migrate.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.47.0",
    "axios": "^1.7.7",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bz2": "^1.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "mysql2": "^3.6.5",
    "node-cron": "^4.2.1",
    "node-schedule": "^2.1.1",
    "pako": "^2.1.0",
    "pg": "^8.12.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.22",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@types/pako": "^2.0.0",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
